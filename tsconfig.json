{
    "compilerOptions": {
        "lib": ["es2020"],
        "outDir": "./lib",
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "allowJs": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["src", "tests"],
    "typedocOptions": {
        "entryPoints": ["src/doc.ts"],
        "out": "docs"
    }
}
